<div class="row">
  <p id="notice"><%= notice %></p>
</div>
<div class="row">
  <div class="col-md-12">
    <h1 class="text-center">Artists</h1>
    <br>
    <br>

    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Genre</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @artists.each do |artist| %>
          <tr>
            <td>
              <%= artist.name %>
              <span class="badge"><%= artist.songs.count %></span>
            </td>
            <td><%= artist.genre.name %></td>
            <td><%= link_to 'Show', artist %></td>
            <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
            <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <br>
  </div>
  <div class="col-md-12">
    <%= link_to 'New Artist', new_artist_path, class: 'btn btn-success' %>
  </div>
</div>
