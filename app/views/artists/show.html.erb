<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-12">
    <h1>
      <%= @artist.name %>
    </h1>
    <p>
      <em>
        <%= @artist.genre.name %>
      </em>
    </p>
  </div>
</div>

<h3>Songs</h3>
<ul class="list-group">
  <% @artist.songs.order(:name).each do |song|%>
    <li class="list-group-item"><%= song.try(:name) %></li>
  <% end %>
</ul>

<div class="row">
  <div class="col-md-12">
    <%= link_to 'Edit', edit_artist_path(@artist), class: 'btn btn-info' %> 
    <%= link_to 'Back', artists_path, class: 'btn btn-default' %>
  </div>
</div>



