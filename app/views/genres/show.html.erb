<p id="notice"><%= notice %></p>

<h1 style="margin-bottom: 30px;">Artists in <%= @genre.name %> Music</h1>

<ul class="list-group">
  <% @genre.artists.order(:name).each do |artist|%>
    <li class="list-group-item"><%= link_to artist.name, artist_path(artist) %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_genre_path(@genre), class: 'btn btn-info' %> |
<%= link_to 'Back', genres_path, class: 'btn btn-default' %>
